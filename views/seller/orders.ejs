                  <!DOCTYPE html>
                  <html lang="en">
                  <head>
                    <meta charset="UTF-8">
                    <meta name="viewport" content="width=device-width, initial-scale=1.0">
                    <title>Your Orders - Seller Dashboard</title>
                    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
                    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
                    <style>
                      :root {
                        --primary-color: #4361ee;
                        --secondary-color: #3f37c9;
                        --success-color: #4cc9f0;
                        --danger-color: #dc3545;
                      }

                      body {
                        background-color: #f8f9fa;
                      }

                      .orders-card {
                        border-radius: 12px;
                        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.05);
                        border: none;
                        overflow: hidden;
                      }

                      .card-header {
                        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                        color: white;
                      }

                      .status-badge {
                        font-size: 0.75rem;
                        padding: 0.35em 0.65em;
                        border-radius: 50px;
                      }

                      .badge-pending {
                        background-color: #ffc107;
                        color: #212529;
                      }

                      .badge-processing {
                        background-color: #0d6efd;
                        color: white;
                      }

                      .badge-shipped {
                        background-color: #fd7e14;
                        color: white;
                      }

                      .badge-delivered {
                        background-color: #198754;
                        color: white;
                      }

                      .order-row {
                        transition: all 0.3s;
                        border-left: 4px solid transparent;
                      }

                      .order-row:hover {
                        transform: translateY(-2px);
                        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                        border-left-color: var(--success-color);
                      }

                      .customer-info {
                        font-size: 0.9rem;
                      }

                      .order-date {
                        font-size: 0.8rem;
                        color: #6c757d;
                      }

                      .action-btn {
                        padding: 0.375rem 0.75rem;
                        font-size: 0.85rem;
                      }

                      .empty-state {
                        padding: 3rem;
                        text-align: center;
                      }

                      .empty-state-icon {
                        font-size: 3rem;
                        color: #adb5bd;
                        margin-bottom: 1rem;
                      }

                      .table-responsive {
                        overflow-x: auto;
                      }

                      @media (max-width: 768px) {
                        .table-responsive {
                          display: block;
                          width: 100%;
                          overflow-x: auto;
                          -webkit-overflow-scrolling: touch;
                        }
                      }
                    </style>
                  </head>
                  <body>
                    <div class="container py-4">
                      <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h4 mb-0">
                          <i class="bi bi-cart-check me-2"></i>Customer Orders
                        </h1>
                        <a href="/seller/dashboard" class="btn btn-outline-secondary">
                          <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
                        </a>
                      </div>

                      <% if (error) { %>
                        <div class="alert alert-danger m-3">
                          <i class="bi bi-exclamation-triangle-fill me-2"></i><%= error %>
                        </div>
                      <% } %>

                      <div class="card orders-card">
                        <div class="card-header">
                          <h2 class="h5 mb-0">Order Management</h2>
                        </div>

                        <div class="card-body">
                          <% if (orders.length === 0) { %>
                            <div class="empty-state">
                              <i class="bi bi-cart-x empty-state-icon"></i>
                              <h3 class="h5">No Orders Yet</h3>
                              <p class="text-muted">When customers purchase your products, their orders will appear here.</p>
                            </div>
                          <% } else { %>
                            <div class="table-responsive">
                              <table class="table table-hover align-middle">
                                <thead class="table-light">
                                  <tr>
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Customer</th>
                                    <th>Status</th>
                                    <th>Total</th>
                                    <th>Actions</th>
                                  </tr>
                                </thead>
                                <tbody>
                                  <% orders.forEach(order => { %>
                                    <tr class="order-row">
                                      <td>
                                        <div class="d-flex align-items-center">
                                          <img src="<%= order.productImage || '/images/default-product.png' %>" 
                                               alt="<%= order.productName || 'Product' %>" 
                                               class="rounded me-2" width="40" height="40">
                                          <div>
                                            <strong><%= order.productName || 'Product' %></strong>
                                            <div class="order-date">
                                              <%= new Date(order.createdAt).toLocaleString() %>
                                            </div>
                                          </div>
                                        </div>
                                      </td>
                                      <td><%= order.quantity || 1 %></td>
                                      <td>
                                        <div class="customer-info">
                                          <div><%= order.customerName || 'Customer' %></div>
                                          <small class="text-muted"><%= order.customerPhone || 'No phone' %></small>
                                        </div>
                                      </td>
                                      <td>
                                        <form action="/seller/orders/<%= order.id %>/status" method="POST" class="d-inline">
                                          <select name="status" class="form-select form-select-sm" 
                                                  onchange="this.form.submit()" style="width: auto;">
                                            <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>
                                              Pending
                                            </option>
                                            <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>
                                              Processing
                                            </option>
                                            <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>
                                              Shipped
                                            </option>
                                            <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>
                                              Delivered
                                            </option>
                                          </select>
                                        </form>
                                        <div class="mt-1">
                                          <span class="status-badge badge-<%= order.status %>">
                                            <i class="bi <%= 
                                              order.status === 'pending' ? 'bi-hourglass' : 
                                              order.status === 'processing' ? 'bi-gear' :
                                              order.status === 'shipped' ? 'bi-truck' :
                                              'bi-check-circle' %> me-1"></i>
                                            <%= order.status ? order.status.charAt(0).toUpperCase() + order.status.slice(1) : 'Unknown' %>
                                          </span>
                                        </div>
                                      </td>
                                      <td>
                                        $<%= ((order.price || 0) * (order.quantity || 1)).toFixed(2) %>
                                      </td>
                                      <td>
                                        <div class="d-flex gap-2">
                                          <a href="/seller/invoice/<%= order.id %>" 
                                             class="btn btn-sm btn-outline-primary action-btn">
                                            <i class="bi bi-receipt"></i> Invoice
                                          </a>
                                          <button class="btn btn-sm btn-outline-secondary action-btn" 
                                                  data-bs-toggle="modal" data-bs-target="#orderDetails<%= order.id %>">
                                            <i class="bi bi-info-circle"></i> Details
                                          </button>
                                          <button class="btn btn-sm btn-outline-danger action-btn" 
                                                  data-bs-toggle="modal" data-bs-target="#deleteOrder<%= order.id %>">
                                            <i class="bi bi-trash"></i> Delete
                                          </button>
                                        </div>
                                      </td>
                                    </tr>

                                    <!-- Order Details Modal -->
                                    <div class="modal fade" id="orderDetails<%= order.id %>" tabindex="-1" 
                                         aria-labelledby="orderDetailsLabel" aria-hidden="true">
                                      <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                          <div class="modal-header">
                                            <h5 class="modal-title" id="orderDetailsLabel">
                                              Order #<%= order.id ? order.id.slice(0, 8) : '' %>
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                          </div>
                                          <div class="modal-body">
                                            <div class="row mb-3">
                                              <div class="col-md-6">
                                                <h6 class="fw-bold">Product Details</h6>
                                                <div class="d-flex align-items-center mb-2">
                                                  <img src="<%= order.productImage || '/images/default-product.png' %>" 
                                                       alt="<%= order.productName || 'Product' %>" 
                                                       class="rounded me-2" width="60" height="60">
                                                  <div>
                                                    <div><%= order.productName || 'Product' %></div>
                                                    <div class="text-muted small">$<%= (order.price || 0).toFixed(2) %> x <%= order.quantity || 1 %></div>
                                                  </div>
                                                </div>
                                                <div class="fw-bold">Total: $<%= ((order.price || 0) * (order.quantity || 1)).toFixed(2) %></div>
                                              </div>
                                              <div class="col-md-6">
                                                <h6 class="fw-bold">Order Status</h6>
                                                <form action="/seller/orders/<%= order.id %>/status" method="POST" class="mb-3">
                                                  <select name="status" class="form-select mb-2">
                                                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                                                    <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                                    <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                                  </select>
                                                  <button type="submit" class="btn btn-sm btn-primary w-100">
                                                    Update Status
                                                  </button>
                                                </form>
                                              </div>
                                            </div>

                                            <div class="row">
                                              <div class="col-md-6">
                                                <h6 class="fw-bold">Customer Information</h6>
                                                <ul class="list-unstyled">
                                                  <li><strong>Name:</strong> <%= order.customerName || 'N/A' %></li>
                                                  <li><strong>Phone:</strong> <%= order.customerPhone || 'N/A' %></li>
                                                  <li><strong>Email:</strong> <%= order.customerEmail || 'N/A' %></li>
                                                </ul>
                                              </div>
                                              <div class="col-md-6">
                                                <h6 class="fw-bold">Shipping Details</h6>
                                                <ul class="list-unstyled">
                                                  <li><strong>Address:</strong> <%= order.customerAddress || 'N/A' %></li>
                                                  <li><strong>Location:</strong> <%= order.customerLocation || 'N/A' %></li>
                                                  <li><strong>Payment:</strong> <%= order.paymentMethod || 'N/A' %></li>
                                                </ul>
                                              </div>
                                            </div>
                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <a href="/seller/invoice/<%= order.id %>" class="btn btn-primary">
                                              <i class="bi bi-receipt me-1"></i> View Invoice
                                            </a>
                                          </div>
                                        </div>
                                      </div>
                                    </div>

                                    <!-- Delete Order Confirmation Modal -->
                                    <div class="modal fade" id="deleteOrder<%= order.id %>" tabindex="-1" 
                                         aria-labelledby="deleteOrderLabel" aria-hidden="true">
                                      <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                          <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title" id="deleteOrderLabel">
                                              <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
                                            </h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                          </div>
                                          <div class="modal-body">
                                            <p>Are you sure you want to delete this order?</p>
                                            <div class="alert alert-warning">
                                              <strong>Warning:</strong> This action cannot be undone. All order data will be permanently removed.
                                            </div>
                                            <div class="card mb-3">
                                              <div class="card-body">
                                                <h6 class="card-title">Order Details</h6>
                                                <p class="card-text mb-1"><strong>Product:</strong> <%= order.productName || 'Product' %></p>
                                                <p class="card-text mb-1"><strong>Customer:</strong> <%= order.customerName || 'Customer' %></p>
                                                <p class="card-text"><strong>Total:</strong> $<%= ((order.price || 0) * (order.quantity || 1)).toFixed(2) %></p>
                                              </div>
                                            </div>
                                          </div>
                                          <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <form action="/seller/orders/<%= order.id %>/delete" method="POST" class="d-inline">
                                              <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash me-1"></i> Delete Order
                                              </button>
                                            </form>
                                          </div>
                                        </div>
                                      </div>
                                    </div>
                                  <% }) %>
                                </tbody>
                              </table>
                            </div>
                          <% } %>
                        </div>
                      </div>
                    </div>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                    <script>
                      // Initialize tooltips
                      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
                      tooltipTriggerList.map(function (tooltipTriggerEl) {
                        return new bootstrap.Tooltip(tooltipTriggerEl);
                      });

                      // Confirm before deleting
                      document.querySelectorAll('.btn-outline-danger').forEach(btn => {
                        btn.addEventListener('click', function(e) {
                          if (!confirm('Are you sure you want to delete this order? This action cannot be undone.')) {
                            e.preventDefault();
                          }
                        });
                      });
                    </script>
                  </body>
                  </html>
